{
  "manifest_version": 2,
  "name": "Exam Calc - IITM Assignments",
  "version": "1.2",
  "description": "Use the calculator provided in exams during IITM assignments instantly",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "browser_specific_settings": {
      "gecko": {
        "id": "{0a57bfe6-e0f2-41ff-9e67-791696d02785}",
        "update_url": "https://raw.githubusercontent.com/rawfiul/exam_calc/main/firefox_extension/updates.json"
      }
  },
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": ["activeTab"],
  "web_accessible_resources": [
    "popup.html",
    "css/calclayout.css",
    "js/jquery-1.8.0.min.js",
    "js/jquery-ui.min.js",
    "js/oscZenoedited.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
